<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TingActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/artwork"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_launcher"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Event Title"
                android:id="@+id/title"
                android:layout_below="@+id/artwork"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Event Description"
                android:textColor="#888888"
                android:id="@+id/description"
                android:layout_below="@+id/title"
                android:layout_alignLeft="@+id/title"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Price:"
                android:id="@+id/textView3"
                android:layout_below="@+id/description"
                android:layout_alignLeft="@+id/description"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="$50.00"
                android:textColor="#888888"
                android:id="@+id/price"
                android:layout_below="@+id/textView3"
                android:layout_alignLeft="@+id/textView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Where:"
                android:id="@+id/textView2"
                android:layout_below="@+id/price"
                android:layout_alignLeft="@+id/price"
                android:layout_marginTop="8dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/date"
                android:layout_above="@+id/title"
                android:background="#000000"
                android:alpha="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Event Date"
                android:textColor="#FFFFFF"
                android:id="@+id/date"
                android:layout_alignLeft="@+id/title"
                android:layout_alignBottom="@+id/artwork" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Event Location"
                android:textColor="#888888"
                android:id="@+id/location"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Contact:"
                android:id="@+id/textView6"
                android:layout_below="@+id/location"
                android:layout_alignLeft="@+id/location"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Event Contact"
                android:textColor="#888888"
                android:id="@+id/contact"
                android:layout_below="@+id/textView6"
                android:layout_alignLeft="@+id/location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Category:"
                android:id="@+id/textView8"
                android:layout_below="@+id/contact"
                android:layout_alignLeft="@+id/contact"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Event Category"
                android:textColor="#888888"
                android:id="@+id/type"
                android:layout_below="@+id/textView8"
                android:layout_alignLeft="@+id/contact" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>